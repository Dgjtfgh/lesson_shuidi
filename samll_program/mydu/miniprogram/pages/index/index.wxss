/**index.wxss**/

page {
  margin: 0;
  padding: 0;
}

.media-bigbox{
  width: 98vw;
  height: 100vh;
  
  padding-left: 10rpx;
  display: flex;
} 
.media-box{
  width: 48vw;
  height: 40vh;
  margin: 10rpx;
  padding-left: 10rpx;
  border: 1px solid #f6f6f6;
  margin-left: 2rpx;
  display: inline-block;
}
/* .media-rightbox{
  padding-left: 10rpx;
  width: 49vw;
  border: 1px solid #f6f6f6;
} */
.media-box__thumb{
  padding-left: 20rpx;
  margin: 4rpx;
  width: 93%;
}
.media-box__hd{
  padding: 2rpx;
  height: 70%;
}
.media-box__bd{
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  width: 100%;
  height: 34%;
  
}
.media-box__title{
  text-align: center;
  line-height: 1.5rem;
}
.media-box__desc{
  display: flex;
}
.media-box__price{
  padding-left: 0.5rem;
  width: 50%;
  color: #000;
  line-height: 1.5rem;
}
.media-box__sc{
  padding-top: 0.7rem;
  padding-right: 1rem;
  width: 50%;
  text-align: right;
  font-size: .7rem;
}