page {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}
.header{
    z-index: 999;
}
.search_box{
    width: 714rpx;
    height: 60rpx;
    margin: 14rpx 18rpx;
    background-color: #efeef3;
}
.search_icon {
    width: 50rpx;
    height: 50rpx;
    margin: 0 10rpx;
}
.search_text{
    height: 52rpx;
    line-height: 82rpx;
    font-size: 80%;
    color: #000000;
    display: inline-block;
}
.cancel{
    /* border: 1px solid #000; */
    margin: 12rpx 24rpx;
    border-radius: 50%;
    width: 36rpx;
    height: 36rpx;
    line-height: 28rpx;
    text-align: center;
    background-color: #b2b2b0;
    color: #fff;
    font-size: 32rpx;
    float: right;
}
.selects{
    display: flex;
    width: 100vw;
    height: 92rpx;
    border-top: 1px solid #f5f4f9;
    border-bottom: o.5px solid #f5f4f9;
}
.sales, .price, .new, .size {
    width: 25vw;
    height: 92rpx;
    line-height: 92rpx;
    font-size: 32rpx;
    text-align: center;
}
.active {
    color: aqua;
}
.hotBox, .historyBox{
    width: 100vw;
    margin-top: 30rpx;
}
.hotSearch, .historySearch{
    font-size: 29rpx;
    margin-left: 20rpx;
    color: #000000;
}
.hotKeyword, .historyKeyword{
    padding-left:20rpx; 
    width: 100vw;
    overflow: hidden;
    color: #868b95;
}
.hotKeyword text, .historyKeyword text{
    display: inline-block;
    box-sizing: border-box;
    height: 62rpx;
    line-height: 52rpx;
    font-size: 26rpx;
    text-align: center;
    background-color: #f5f4f9;
    padding: 5rpx 30rpx;
    margin:10rpx 10rpx;
}

/* 商品 */
.product_content{
    width: 100vw;
    position: absolute;
    top: 180rpx;
    /* padding-top: 20rpx; */
    /* margin-top: 20rpx; */
    display: flex;
    /* 子元素总宽度超过父元素宽度时换行显示 */
    flex-wrap: wrap;
  } 
  .media-box{
    width: 50vw;
    height: 460rpx;
    background-color: #FFFFFF;
    border: 0.5rpx solid #f5f4f9;
    box-sizing:border-box;
    display: inline-block;
  }
  .media-box__thumb{
    height: 260rpx;
    /* margin: 4rpx; */
  }
  .media-box__hd{
    /* padding: 2rpx; */
    width: 100%;
    height: 260rpx;
    /* background-color: blue; */
    box-sizing:border-box;
  }
  .media-box__bd{
    box-sizing:border-box;
    /* background-color: green; */
    width: 100%;
    height: 160rpx;
  }
  .media-box__title{
    width: 306rpx;
    height: 82rpx;
    font-size: 27rpx;
    box-sizing:border-box;
    display: block;
    white-space: pre-line;
    /* background-color: green; */
  }
  .media-box__desc{
    width: 100%;
    height: 76rpx;
    margin-bottom: 16rpx;
    box-sizing:border-box;
    display: flex;
  }
  .media-box__price{
    width: 50%;
    color: #000;
    font-size: 32rpx;
    line-height: 70rpx;
  }
  .media-box__price symbol{
    font-size: .6rem;
  }
  .media-box__sc{
    width: 50%;
    text-align: right;
    font-size: .6rem;
    line-height: 70rpx;
  }