/**index.wxss**/
page {
  margin: 0;
  padding: 0;
}
.media-box_top{
  width: 100vw;
  height: 5vh;
  margin: 10rpx 0;
  /* background-color: yellow; */
  display: flex; 
}

.media-box__search{
  margin-left: 30rpx;
  padding-left: 15rpx;
  width: 90%;
  height: 100%;
  line-height: 82rpx;
  color: #8a8a8a;
  background-color: #f2f2f2;
  box-sizing:border-box;
  display: flex;
  /* background-color: green; */
}
.media-box_search__tb{
  width: 10%;
  height: 100%;
 
}
.text{
  font-size: 80%;
  line-height: 50rpx;
}
.media-box_classify{
  width: 10%;
  margin: 0 15rpx;
  padding: 0 10rpx;
  box-sizing:border-box;
  /* background-color: blue; */
}
.media-box_classify__thumb{
  width: 100%;
  height: 100%;
}
.media-bigbox{
  width: 100vw;
  height: 95vh;
  display: flex;
  /* 子元素总宽度超过父元素宽度时换行显示 */
  flex-wrap: wrap;
} 
.media-box{
  width: 50vw;
  height: 35vh;
  border: 1px solid #f6f6f6;
  box-sizing:border-box;
  display: inline-block;
}
.media-box__thumb{
  padding-left: 8rpx;
  margin: 4rpx;
  width: 93%;
}
.media-box__hd{
  padding: 2rpx;
  height: 70%;
}
.media-box__bd{
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  width: 100%;
  height: 34%;
}
.media-box__title{
  width: 80%;
  text-align: center;
}
.media-box__desc{
  display: flex;
}
.media-box__price{
  padding-left: 0.5rem;
  width: 50%;
  color: #000;
  line-height: 1.5rem;
}
.media-box__sc{
  padding-top: 0.7rem;
  padding-right: 1rem;
  width: 50%;
  text-align: right;
  font-size: .7rem;
}