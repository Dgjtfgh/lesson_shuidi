<view class="section">
    <view class="cover">
        <img src="{{entity.image}}" mode="aspectFill" alt=""/>
        <view class="content">
        <view class="header">
            {{entity.header}}
        </view>
        <view class="sub-header">
            {{entity.sub-header}}
        </view>
        </view>
        <view class="meta">
            {{entity.meta.price}}
        </view>
    </view>
    <view class="spec">
        <view class="item">
            <view class="header">二氧化碳排放</view>
            <view class="value">
                <text>{{entity.meta.cabon_dioxide}}</text>克/公里
            </view>
        </view>
        <view class="item">
            <view class="header">综合燃油</view>
            <view class="value">
                <text>{{entity.meta.fuel}}</text>
            </view>
        </view>
    </view>
    </view>